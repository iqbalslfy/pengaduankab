<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"

            >

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_margin="12dp"
                    android:text="@string/detail_pengaduan"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/imagelinear"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher" />

                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/img_people"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_account" />
                        <TextView
                            android:id="@+id/textpeople"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_people"
                            android:textAlignment="center"
                            android:text="Muhammad Iqbal Maulana"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/img_kantor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textpeople"
                            android:src="@drawable/ic_work" />


                        <TextView
                            android:id="@+id/textkepada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_kantor"
                            android:text="Dinas Informasi dan Komunikasi"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/img_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textkepada"
                            android:src="@drawable/ic_time" />
                        <TextView
                            android:id="@+id/textwaktu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_time"
                            android:text="yyyy/mm/dd, 00:00:00"
                            android:textAlignment="center"
                            android:textSize="14dp"
                            android:textStyle="bold" />



                        <TextView
                            android:id="@+id/no_ktpd"
                            android:layout_width="match_parent"
                            android:layout_height="32sp"
                            android:layout_below="@id/img_time"
                            android:paddingLeft="47sp"
                            android:text="01234567891011"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/urlimages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="https://localhost/image/image.png"
                        android:textAlignment="center"
                        android:visibility="gone"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="==== Isi Pengaduan ===="
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/textpengaduan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:lineSpacingMultiplier="1.5"
                        android:padding="12dp"
                        android:text="@string/co3"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="== Tanggapan Pengaduan =="
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:textStyle="bold|italic"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:id="@+id/txttgltanggapan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="21/Jan/2017, 12:00"
                        android:textAlignment="textEnd"
                        android:textStyle="bold|italic"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/textTanggapan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:lineSpacingMultiplier="1.5"
                        android:padding="12dp"
                        android:text="@string/co3"
                        android:textSize="13dp" />

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </ScrollView>

</RelativeLayout>
