<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/imageList"
        android:layout_width="70sp"
        android:layout_height="90sp">
        <ImageView
            android:id="@+id/imageLists"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5sp"
            android:text="No Image"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/ktp_id"
        android:layout_toRightOf="@+id/imageList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="018263871624"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/name_ktp"
        android:layout_toRightOf="@+id/imageList"
        android:layout_below="@+id/ktp_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nama lenglap"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/jam"
        android:gravity="right"
        android:layout_toRightOf="@+id/imageList"
        android:layout_below="@+id/name_ktp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="15sp"
        />

    <TextView
    android:id="@+id/komentar"
    android:layout_toRightOf="@+id/imageList"
    android:layout_below="@id/jam"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Komentar Anda"
    android:maxLength="30"/>

    <TextView
        android:id="@+id/url"
        android:layout_toRightOf="@+id/imageList"
        android:layout_below="@id/komentar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Komentar Anda"
        android:paddingBottom="10sp"
        android:visibility="gone"/>
</RelativeLayout>